<idea-plugin>
    <id>com.puhovin.intellijplugin.twm</id>
    <name>ToolWindow Manager Advanced</name>
    <vendor email="dinamond2003@gmail.com">Ilya Pukhov</vendor>
    <description>
        <![CDATA[
        <html>
        <h2>âœ¨ ToolWindow Manager Advanced</h2>
        <p>Take control of your IDE's workspace with <b>hierarchical ToolWindow management</b>:</p>

        <table border="1">
        <tr><th>Level</th><th>Capabilities</th></tr>
        <tr><td><b>Global</b></td><td>Set default visibility for all projects</td></tr>
        <tr><td><b>Project</b></td><td>Override defaults when needed</td></tr>
        </table>

        <br/>
        <p>ðŸ’¡ <b>Perfect for</b>:</p>
        <ul>
        <li>Teams sharing styleguides but needing project flexibility</li>
        <li>Developers working with different tech stacks</li>
        <li>Anyone wanting cleaner IDE interface</li>
        </ul>
        </html>
        ]]>
    </description>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.puhovin.intellijplugin.twm.ResetToolWindowsToDefaultsOnStartup" />
    </extensions>

    <resource-bundle>com.puhovin.intellijplugin.twm.ToolWindowManagerBundle</resource-bundle>

    <actions>
        <group id="ToolWindowManagerActionGroup"
               class="com.puhovin.intellijplugin.twm.action.ToolWindowManagerActionGroup"
               popup="true">
            <action id="ConfigurePreferredAvailabilitiesAction"
                    class="com.puhovin.intellijplugin.twm.action.ConfigurePreferredAvailabilitiesAction" />
            <action id="ApplyPreferredAvailabilitiesAction"
                    class="com.puhovin.intellijplugin.twm.action.ApplyPreferredAvailabilitiesAction" />
            <action id="ApplyDefaultAvailabilitiesAction"
                    class="com.puhovin.intellijplugin.twm.action.ApplyDefaultAvailabilitiesAction" />
            <add-to-group group-id="ToolsMenu" anchor="last" />
        </group>
    </actions>

</idea-plugin>
